{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-freshness",
      "urls": [
        "/api/parejas/**",
        "/api/gastos/**",
        "/api/reportes/**",
        "/api/usuarios/me",
        "/api/presupuestos/**",
        "/api/deudas/**",
        "/api/deudas-externas/**",
        "/api/gastos-recurrentes/**",
        "/api/dashboard/**"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "1d",
        "strategy": "freshness",
        "timeout": "3s"
      }
    },
    {
      "name": "api-performance",
      "urls": [
        "/api/public/categorias"
      ],
      "cacheConfig": {
        "maxSize": 10,
        "maxAge": "7d",
        "strategy": "performance"
      }
    },
    {
      "name": "google-fonts",
      "urls": [
        "https://fonts.googleapis.com/**",
        "https://fonts.gstatic.com/**"
      ],
      "cacheConfig": {
        "maxSize": 20,
        "maxAge": "30d",
        "strategy": "performance"
      }
    }
  ]
}